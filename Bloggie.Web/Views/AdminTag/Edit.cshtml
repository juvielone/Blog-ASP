@model Bloggie.Web.Models.ViewModels.EditTagRequest
@{
}

<div class="bg-secondary bg-opacity-10 py-2">
	<div class="container">
		<h1>Edit Tag - Admin functionality</h1>
	</div>
</div>

<div class="container py-5">
	@if (Model != null)
	{
		<form method="post">
			<div class="mb-3">
				<label class="form-label"> Id</label>
				<input type="text" class="form-control" asp-for="Id" readonly />
			</div>

			<div class="mb-3">
				<label class="form-label">Name</label>
				<input type="text" class="form-control" asp-for="Name" id="name" />
			</div>

			<div class="mb-3">
				<label class="form-label">Display Name</label>
				<input type="text" class="form-control" asp-for="DisplayName" id="displayName" />
			</div>


			<div class="mb-3">
				<div class="d-flex">
					<button type="submit" class="btn btn-dark">Update</button>

					<button type="submit"
						asp-area=""
						asp-controller="AdminTag"
						asp-action="Delete"
						class="btn btn-danger ms-2">
						Delete
					</button>

				</div>
			</div>
		</form>

	}
	else
	{
		<p>Tag not Found!</p>
	}
</div>


